<%- include header %>
<% if(user && (user.name===post.author)){ %>
<p>
<span><a class='edit' href='/edit/<%=post.author %>/<%= post.time.day %>/<%= post.title %>'>编辑</a></span>
<span><a href='/remove/<%=post.author %>/<%= post.time.day %>/<%= post.title %>'>删除</a></span>
</p>
<% } %>
<p class="info">
  作者：<a href="/u/<%= post.author %>"><%= post.author %></a> | 
  日期：<%= post.time.minute %>
</p>
<p><%- post.content %></p>
<%- include comment %>
<%- include footer %>